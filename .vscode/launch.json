    "version": "0.2.0",
    "configurations": [


        {
            "name": "RUN DEV",
            "request": "launch",
            "runtimeArgs": [
                "run-script","dev"
            ],
            "outputCapture": "std",
            "console": "integratedTerminal",
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "cwd":"${workspaceFolder}/backend/src"
        },

        {
            "name": "RUN BUILD",
            "request": "launch",
            "runtimeArgs": [
                "run-script","build"
            ],
            "outputCapture": "std",
            "console": "integratedTerminal",
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "cwd":"${workspaceFolder}/backend/src"
        },

        {
            "name": "START PROD",
            "request": "launch",
            "runtimeArgs": [
                "start"
            ],
            "outputCapture": "std",
            "console": "integratedTerminal",
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "cwd":"${workspaceFolder}/backend/src"
        }
        
    ]
}